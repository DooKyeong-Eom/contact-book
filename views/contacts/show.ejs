<!-- views/contacts/show.ejs -->

<!DOCTYPE html>
<html>
    <head>
        <%-include('../partials/head') %>
    </head>
    <body>
        <%-include('../partials/nav') %>

        <div class ="contact contact-show">
            <h2>Show</h2>
            <div>
                <h3><%= contact.name%></h3>
                <label>Email</label><span><%= contact.email %></span>
                <br>
                <label>Phone</label><span><%= contact.phone %></span>
            </div>
            <div class= "contact-menu">
                <a href="/contacts/<%= contact._id %>/edit">Edit</a> <!-- a tag로 Edit을 만들어 edit action에 연결했습니다. -->
                <form action="/contacts/<%= contact._id %>?_method=delete" method="post"> <!-- a tag로는 get만 요청할 수 있기 때문에 Delete는 form으로 처리 -->
                    <a href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a> 
                    <!-- Delete를 눌렀을 때 onclick을 사용해서 confirm을 뛰우고 yes인 경우 form을 submit하게 합니다-->
                </form>
            </div>
        </div>
    </body>
</html>